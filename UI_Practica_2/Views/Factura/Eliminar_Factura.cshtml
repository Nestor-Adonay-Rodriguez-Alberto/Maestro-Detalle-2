@model Entidades.Factura

@{
    ViewData["Title"] = "Eliminar_Factura";
}

<h1>Eliminar_Factura</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Factura</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRealizada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRealizada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correlativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correlativo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    
    <!-- VISTA PARCIAL -->
    <div class="col-md-12" style="margin-top:10px;" id="Respuesta_Servidor">
        @await Html.PartialAsync("_Detalle_Factura", Model.Lista_DetalleFactura)
    </div>

    <form asp-action="Eliminar_Factura">
        <input type="hidden" asp-for="IdFactura" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Registros_Facturas" class="btn btn-secondary">CANCELAR</a>
    </form>
</div>
